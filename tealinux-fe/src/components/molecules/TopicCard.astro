---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={[
	"flex w-full p-5 flex-col gap-3 rounded-xl",
	"border border-white/10",
	"bg-gradient-to-br from-white/5 to-white/0",
	"backdrop-blur-sm",
	"hover:border-[#54CD4C]/30",
	"hover:shadow-[0_0_15px_rgba(84,205,76,0.15)]",
	"transition-all duration-200 cursor-pointer",
	className
]}>
	<slot />
</div>
