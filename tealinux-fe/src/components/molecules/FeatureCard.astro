---
interface Props {
	title: string;
	description: string;
	icon: string; // We can pass the SVG path d attribute or the full SVG
}

const { title, description, icon } = Astro.props;
---

<div class="flex flex-col justify-start items-center w-[240px] h-[260px] p-[25px_20px] rounded-[30px] bg-white shadow-[0px_4px_20px_rgba(0,0,0,0.1)] text-center text-black shrink-0 snap-center hover:scale-105 hover:shadow-2xl hover:border-[#54CD4C]/20 border-2 border-transparent transition-all duration-300 group">
	<div class="flex justify-center items-center w-[60px] h-[60px] rounded-full bg-[#54CD4C] mb-[15px] text-black group-hover:scale-110 transition-transform duration-300">
		<Fragment set:html={icon} />
	</div>
	<h3 class="text-[16px] font-[800] leading-[1.2] mb-[10px] text-black" set:html={title}></h3>
	<div class="w-full h-[1px] bg-[#797a7a]/20 mb-[10px]"></div>
	<p class="text-[14px] font-medium leading-[1.4] text-slate-600">{description}</p>
</div>
