---
interface Props {
	title: string;
	description: string;
	icon: string; // We can pass the SVG path d attribute or the full SVG
}

const { title, description, icon } = Astro.props;
---

<div class="flex flex-col justify-start items-center w-[210px] h-[221px] p-[20px_15px] rounded-[25px] bg-white shadow-[0px_4px_20px_rgba(0,0,0,0.1)] text-center text-black shrink-0 snap-center">
	<div class="flex justify-center items-center w-[50px] h-[50px] rounded-full bg-[#54CD4C] mb-[10px] text-black">
		<Fragment set:html={icon} />
	</div>
	<h3 class="text-[14px] font-[800] leading-[1.2] mb-[8px] text-black" set:html={title}></h3>
	<div class="w-full h-[1px] bg-[#797a7a] mb-[8px]"></div>
	<p class="text-[13px] text-semibold leading-[1.3] text-[#00000]">{description}</p>
</div>
