---
interface Props {
	class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={[
	"flex w-full max-w-[400px] min-h-[200px] p-6 flex-col justify-between gap-3 rounded-2xl",
	"border-2 border-white/10",
	"bg-gradient-to-br from-white/5 to-white/0",
	"backdrop-blur-sm",
	"hover:border-[#54CD4C]/50",
	"hover:shadow-[0_0_20px_rgba(84,205,76,0.2)]",
	"hover:scale-[1.02]",
	"transition-all duration-300 cursor-pointer",
	className
]}>
	<slot />
</div>
