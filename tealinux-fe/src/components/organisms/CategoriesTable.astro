---
import Button from "../atoms/Button.astro"

const { categories = [] } = Astro.props
---

<div class="overflow-x-auto">
  <table class="w-full text-left border-collapse">
    <thead>
      <tr>
        <th class="p-3 border-b border-slate-700 text-slate-400 font-medium text-sm">Name</th>
        <th class="p-3 border-b border-slate-700 text-slate-400 font-medium text-sm">Slug</th>
        <th class="p-3 border-b border-slate-700 text-slate-400 font-medium text-sm">Description</th>
        <th class="p-3 border-b border-slate-700 text-slate-400 font-medium text-sm">Order</th>
        <th class="p-3 border-b border-slate-700 text-slate-400 font-medium text-sm">Action</th>
      </tr>
    </thead>
    <tbody id="categories-table-body">
      {categories.map(c => (
        <tr class="hover:bg-slate-800/50 transition-colors">
          <td class="p-3 border-b border-slate-700 text-slate-200">{c.Name}</td>
          <td class="p-3 border-b border-slate-700 text-slate-200">{c.Slug}</td>
          <td class="p-3 border-b border-slate-700 text-slate-200">{c.Description}</td>
          <td class="p-3 border-b border-slate-700 text-slate-200">{c.Order}</td>
          <td class="p-3 border-b border-slate-700">
            <div class="flex gap-2">
                <Button variant="default" onclick={`editCategory('${c.ID}')`}>Edit</Button>
                <Button variant="danger" onclick={`deleteCategory('${c.ID}')`}>Delete</Button>
            </div>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
