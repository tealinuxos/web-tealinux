---
import { getCollection } from 'astro:content';

interface Props {
  currentId: string;
}

const { currentId } = Astro.props;
const docs = await getCollection('docs');

// Sort all docs by category and then by order to find neighbors
const sortedDocs = docs.sort((a, b) => {
  if (a.data.category !== b.data.category) {
    return a.data.category.localeCompare(b.data.category);
  }
  return (a.data.order || 0) - (b.data.order || 0);
});

const currentIndex = sortedDocs.findIndex(doc => doc.id === currentId);
const prevDoc = currentIndex > 0 ? sortedDocs[currentIndex - 1] : null;
const nextDoc = currentIndex < sortedDocs.length - 1 ? sortedDocs[currentIndex + 1] : null;

const getHref = (id: string) => `/docs/${id === 'index' ? '' : id}`;
---

<nav class="flex items-center justify-between gap-4 mt-12 pt-8 border-t border-white/10">
  {prevDoc ? (
    <a 
      href={getHref(prevDoc.id)}
      class="flex-1 group p-4 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 hover:border-[#54CD4C]/30 transition-all"
    >
      <div class="flex items-center gap-2 text-sm text-slate-400 mb-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span>Previous</span>
      </div>
      <div class="font-semibold text-white group-hover:text-[#54CD4C] transition-colors">
        {prevDoc.data.title}
      </div>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}

  {nextDoc ? (
    <a 
      href={getHref(nextDoc.id)}
      class="flex-1 group p-4 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 hover:border-[#54CD4C]/30 transition-all text-right"
    >
      <div class="flex items-center justify-end gap-2 text-sm text-slate-400 mb-1">
        <span>Next</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
      <div class="font-semibold text-white group-hover:text-[#54CD4C] transition-colors">
        {nextDoc.data.title}
      </div>
    </a>
  ) : (
    <div class="flex-1"></div>
  )}
</nav>
