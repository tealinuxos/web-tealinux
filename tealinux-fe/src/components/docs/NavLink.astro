---
interface Props {
  prevTitle?: string;
  prevDescription?: string;
  prevHref?: string;
  nextTitle?: string;
  nextDescription?: string;
  nextHref?: string;
}

const { prevTitle, prevDescription, prevHref, nextTitle, nextDescription, nextHref } = Astro.props;
---

<nav class="flex items-center justify-between gap-4 mt-12 pt-8 border-t border-white/10">
  {prevHref ? (
    <a 
      href={prevHref}
      class="flex-1 group p-4 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 hover:border-[#54CD4C]/30 transition-all"
    >
      <div class="flex items-center gap-2 text-sm text-slate-400 mb-1">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        <span>Previous</span>
      </div>
      <div class="font-semibold text-white group-hover:text-[#54CD4C] transition-colors">
        {prevTitle}
      </div>
      {prevDescription && (
        <div class="text-sm text-slate-400 mt-1">{prevDescription}</div>
      )}
    </a>
  ) : (
    <div class="flex-1"></div>
  )}

  {nextHref ? (
    <a 
      href={nextHref}
      class="flex-1 group p-4 rounded-lg border border-white/10 bg-white/5 hover:bg-white/10 hover:border-[#54CD4C]/30 transition-all text-right"
    >
      <div class="flex items-center justify-end gap-2 text-sm text-slate-400 mb-1">
        <span>Next</span>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </div>
      <div class="font-semibold text-white group-hover:text-[#54CD4C] transition-colors">
        {nextTitle}
      </div>
      {nextDescription && (
        <div class="text-sm text-slate-400 mt-1">{nextDescription}</div>
      )}
    </a>
  ) : (
    <div class="flex-1"></div>
  )}
</nav>
