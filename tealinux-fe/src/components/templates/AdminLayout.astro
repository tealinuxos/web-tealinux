---
import AdminSidebar from "../organisms/AdminSidebar.astro"
import AdminNavbar from "../organisms/AdminNavbar.astro"
import '../../styles/global.css';

const { title = "TeaLinux Admin" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-slate-900 text-white font-sans">
    <div class="grid grid-cols-[240px_1fr] min-h-screen">
      <AdminSidebar />
      <div class="flex flex-col">
        <AdminNavbar />
        <main class="p-10 flex-1">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>
