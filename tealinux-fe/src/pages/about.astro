---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/organisms/Navbar.astro';
import Footer from '../components/organisms/Footer.astro';
import FeatureCard from '../components/molecules/FeatureCard.astro';
---

<Layout title="About TeaLinuxOS - Our Story">
	<main class="min-h-screen bg-black text-slate-50 font-['Poppins',sans-serif] flow-root relative">
		<!-- Background Glow -->

		<div class="relative z-[1]">
			<Navbar />

			<!-- Hero Section -->
			<header class="relative pt-[100px] px-[5%] text-center max-w-[900px] mx-auto flex flex-col items-center">
				<h1 class="text-[#54CD4C] text-center font-['Poppins',sans-serif] text-[48px] md:text-[60px] font-bold leading-normal mb-4">
					About TeaLinuxOS
				</h1>
				<p class="text-white font-['Poppins',sans-serif] text-base font-medium leading-normal mb-10">
					A Linux distribution brewed for learning, creativity, and community.
				</p>
				
				<div class="flex flex-col items-center gap-6">
					<a href="#story" class="group flex items-center gap-3 px-8 py-4 rounded-xl bg-white/5 border border-white/10 hover:bg-white/10 hover:border-[#54CD4C]/30 transition-all duration-300 backdrop-blur-md shadow-[0_0_20px_rgba(0,0,0,0.3)]">
						<span class="text-sm font-semibold text-white/90 group-hover:text-white">Learn Our Story</span>
						<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="transition-transform group-hover:translate-x-1"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>
					</a>
					<p class="text-white text-center font-['Poppins',sans-serif] text-xs font-medium leading-normal">
						Built by <span class="font-bold">DOSCOM</span>, inspired by freedom.
					</p>
				</div>
			</header>

			<!-- Journey Section -->
			<section id="story" class="relative py-[100px] px-[5%] max-w-[1240px] mx-auto">
				<div class="flex flex-col gap-4 items-center">
					<div class="text-center mb-16">
						<h2 class="text-3xl md:text-4xl font-bold flex flex-wrap items-center justify-center gap-3">
							<span class="text-[#54CD4C]">The Journey of</span>
							<span class="inline-block relative">
								<svg class="absolute inset-0 w-full h-full" viewBox="0 0 159 32" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
									<path d="M8.08859 2.75138C8.62801 1.10969 10.1607 0 11.8887 0H154.27C156.899 0 158.813 2.49208 158.135 5.03172L151.728 29.0317C151.261 30.7822 149.675 32 147.863 32H4.00301C1.28 32 -0.647121 29.3383 0.202877 26.7514L8.08859 2.75138Z" fill="#54CD4C"/>
								</svg>
								<span class="relative z-10 px-4 py-1 text-black font-bold">TeaLinuxOS</span>
							</span>
						</h2>
					</div>
					
					<div class="flex flex-col md:flex-row gap-12 items-center w-full max-w-[1240px]">
						<div class="relative group w-full max-w-[450px]">
							<img src="/src/assets/logo.svg" alt="TeaLinuxOS Cosmic DE" class="w-full h-full object-cover opacity-80 group-hover:opacity-100 transition-opacity duration-500" />
						</div>

						<div class="flex flex-col gap-4 items-center w-full max-w-[800px] space-y-8">
							<div class="space-y-6">
								<p class="text-white font-['Poppins',sans-serif] text-base font-medium leading-normal text-center md:text-left">
									TeaLinuxOS was first developed by DOSCOM (Dinus Open Source Community) as a learning platform for 
									students and developers to explore open-source software.
								</p>
								<p class="text-white font-['Poppins',sans-serif] text-base font-medium leading-normal text-center md:text-left">
									Based on Arch Linux, TeaLinuxOS combines speed, simplicity, and modern design - made by love and crafted by the community.
								</p>
							</div>

							<!-- Timeline -->
							<ul class="space-y-4 pt-2 flex flex-col items-center md:items-start">
								<li class="flex items-center gap-4">
									<div class="w-2.5 h-2.5 rounded-full bg-[#54CD4C]"></div>
									<div class="flex items-baseline gap-3">
										<span class="text-[#54CD4C] font-semibold text-lg">2010</span>
										<span class="text-white/90 font-medium">First TeaLinuxOS prototype</span>
									</div>
								</li>
								<li class="flex items-center gap-4">
									<div class="w-2.5 h-2.5 rounded-full bg-[#54CD4C]"></div>
									<div class="flex items-baseline gap-3">
										<span class="text-[#54CD4C] font-semibold text-lg">2015</span>
										<span class="text-white/90 font-medium">Became part of DOSCOM education program</span>
									</div>
								</li>
								<li class="flex items-center gap-4">
									<div class="w-2.5 h-2.5 rounded-full bg-[#54CD4C]"></div>
									<div class="flex items-baseline gap-3">
										<span class="text-[#54CD4C] font-semibold text-lg">2025</span>
										<span class="text-white/90 font-medium">Released new editions with Wayland and Plasma 6</span>
									</div>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</section>

			<!-- Our Philosophy & Vision Section -->
			<section class="relative py-20 px-[5%] max-w-[1240px] mx-auto text-center">
				<h2 class="text-[#54CD4C] font-['Poppins',sans-serif] text-2xl font-bold leading-normal mb-12">
					Our Philosophy & Vision
				</h2>
				
				<div class="flex flex-wrap justify-center gap-[30px]">
					<!-- Card 1: Simplicity in Every Brew -->
					<div class="philosophy-card flex w-[311px] h-[221px] py-[25px] px-7 flex-col items-center gap-2.5 rounded-[20px] border-[3px] border-white/30 bg-gradient-to-br from-white/40 via-white/25 to-white/10 backdrop-blur-[20px] transition-all duration-300 hover:-translate-y-1 hover:border-white/50 hover:shadow-[0_10px_30px_rgba(0,0,0,0.2)]">
						<div class="flex justify-center items-center w-[60px] h-[60px] rounded-full bg-[#54CD4C]/15 text-[#54CD4C]">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 8h1a4 4 0 1 1 0 8h-1"></path><path d="M3 8h14v9a4 4 0 0 1-4 4H7a4 4 0 0 1-4-4Z"></path><line x1="6" x2="6" y1="2" y2="4"></line><line x1="10" x2="10" y1="2" y2="4"></line><line x1="14" x2="14" y1="2" y2="4"></line></svg>
						</div>
						<h3 class="text-[#54CD4C] text-center font-['Poppins',sans-serif] text-[15px] font-semibold leading-normal">
							Simplicity in Every Brew
						</h3>
						<p class="text-white text-center font-['Poppins',sans-serif] text-[15px] font-medium leading-normal">
							Lightweight, fast, and elegant - TeaLinuxOS keeps things clean and efficient.
						</p>
					</div>

					<!-- Card 2: Community - Driven -->
					<div class="philosophy-card flex w-[311px] h-[221px] py-[25px] px-7 flex-col items-center gap-2.5 rounded-[20px] border-[3px] border-white/30 bg-gradient-to-br from-white/40 via-white/25 to-white/10 backdrop-blur-[20px] transition-all duration-300 hover:-translate-y-1 hover:border-white/50 hover:shadow-[0_10px_30px_rgba(0,0,0,0.2)]">
						<div class="flex justify-center items-center w-[60px] h-[60px] rounded-full bg-[#54CD4C]/15 text-[#54CD4C]">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/></svg>
						</div>
						<h3 class="text-[#54CD4C] text-center font-['Poppins',sans-serif] text-[15px] font-semibold leading-normal">
							Community - Driven
						</h3>
						<p class="text-white text-center font-['Poppins',sans-serif] text-[15px] font-medium leading-normal">
							Built by developers and learners from DOSCOM and beyond
						</p>
					</div>

					<!-- Card 3: Open Education -->
					<div class="philosophy-card flex w-[311px] h-[221px] py-[25px] px-7 flex-col items-center gap-2.5 rounded-[20px] border-[3px] border-white/30 bg-gradient-to-br from-white/40 via-white/25 to-white/10 backdrop-blur-[20px] transition-all duration-300 hover:-translate-y-1 hover:border-white/50 hover:shadow-[0_10px_30px_rgba(0,0,0,0.2)]">
						<div class="flex justify-center items-center w-[60px] h-[60px] rounded-full bg-[#54CD4C]/15 text-[#54CD4C]">
							<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2L2 7l10 5 10-5-10-5z"></path><path d="M2 17l10 5 10-5"></path><path d="M2 12l10 5 10-5"></path></svg>
						</div>
						<h3 class="text-[#54CD4C] text-center font-['Poppins',sans-serif] text-[15px] font-semibold leading-normal">
							Open Education
						</h3>
						<p class="text-white text-center font-['Poppins',sans-serif] text-[15px] font-medium leading-normal">
							Empowering people to learn Linux the open-source way.
						</p>
					</div>
				</div>
			</section>
		</div>

		<Footer />
	</main>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;900&display=swap');

	/* Responsive adjustments for philosophy cards */
	@media (max-width: 768px) {
		.philosophy-card {
			width: 280px !important;
			height: auto !important;
			min-height: 200px;
		}
	}
</style>
