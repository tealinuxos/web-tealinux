---
import AdminLayout from "../../components/templates/AdminLayout.astro"
import CategoriesTable from "../../components/organisms/CategoriesTable.astro"

const categories = []
---

<AdminLayout>
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">Categories</h1>
    <button id="create-btn" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
      Create Category
    </button>
  </div>
  
  <CategoriesTable categories={categories} />
</AdminLayout>

<script is:inline>
  {
    const API_URL = 'http://localhost:3000/categories'; // Public endpoint for listing
    const ADMIN_API_URL = 'http://localhost:3000/api/admin/categories'; // Protected for mutations
    const token = localStorage.getItem('tealinux_token');

    if (!token) {
      window.location.href = '/login';
    }

    async function fetchCategories() {
      try {
        const res = await fetch(API_URL);
        if (!res.ok) throw new Error('Failed to fetch');
        const data = await res.json();
        renderCategories(data);
      } catch (err) {
        console.error(err);
      }
    }

    function renderCategories(categories) {
      const tbody = document.getElementById('categories-table-body');
      if (!tbody) return;
      
      if (categories.length === 0) {
          tbody.innerHTML = '<tr><td colspan="5" class="p-3 text-center text-slate-400">No categories found</td></tr>';
          return;
      }

      tbody.innerHTML = categories.map(c => `
          <tr class="hover:bg-slate-800/50 transition-colors">
            <td class="p-3 border-b border-slate-700 text-slate-200">${c.name}</td>
            <td class="p-3 border-b border-slate-700 text-slate-200">${c.slug}</td>
            <td class="p-3 border-b border-slate-700 text-slate-200">${c.description || '-'}</td>
            <td class="p-3 border-b border-slate-700 text-slate-200">${c.order}</td>
            <td class="p-3 border-b border-slate-700">
              <div class="flex gap-2">
                  <button 
                      class="px-3.5 py-1.5 rounded-md text-sm cursor-pointer border-none transition-colors bg-slate-700 text-white hover:bg-slate-600"
                      onclick="editCategory('${c.id}')"
                  >Edit</button>
                  <button 
                      class="px-3.5 py-1.5 rounded-md text-sm cursor-pointer border-none transition-colors bg-red-500 text-white hover:bg-red-600"
                      onclick="deleteCategory('${c.id}')"
                  >Delete</button>
              </div>
            </td>
          </tr>
      `).join('');
    }

    window.deleteCategory = async (id) => {
        if(!confirm('Are you sure you want to delete this category?')) return;
        
        try {
            const res = await fetch(`${ADMIN_API_URL}/${id}`, {
                method: 'DELETE',
                headers: {
                    'Authorization': `Bearer ${token}`
                }
            });
            
            if(res.ok) {
                fetchCategories();
            } else {
                alert('Failed to delete category');
            }
        } catch(e) {
            console.error(e);
            alert('Error deleting category');
        }
    }

    window.editCategory = (id) => {
        alert('Edit feature coming soon! ID: ' + id);
    }
    
    document.getElementById('create-btn')?.addEventListener('click', () => {
        alert('Create feature coming soon!');
    });

    fetchCategories();
  }
</script>
