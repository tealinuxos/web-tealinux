---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login - TeaLinux Forum">
	<main class="min-h-screen flex font-['Plus_Jakarta_Sans',sans-serif]">
		<!-- Left Section - Branding -->
		<div class="hidden lg:flex lg:w-1/2 relative bg-black flex-col justify-between p-12">

			<div class="relative z-10">
				<img src="/src/assets/tealinus_ijo.svg" alt="TeaLinuxOS" class="h-10" />
			</div>
			
			<!-- Title Section -->
			<div class="relative z-10 flex-1 flex flex-col justify-center">
				<div class="w-[752px] max-w-full">
					<h1 class="text-[#26A768] font-['Plus_Jakarta_Sans',sans-serif] text-6xl xl:text-[76px] font-extrabold leading-none tracking-[-3.84px]">
						"Nikmati
					</h1>
					<h1 class="text-white font-['Plus_Jakarta_Sans',sans-serif] text-6xl xl:text-[76px] font-extrabold leading-none tracking-[-3.84px]">
						Sebuah Racikan"
					</h1>
				</div>
				<p class="mt-6 text-white/70 text-base max-w-md leading-relaxed">
					Join the community-driven Linux distribution crafted for developer and education. Experience the speed, simplicity, and freedom.
				</p>
			</div>
			
			<!-- Footer -->
			<div class="relative z-10">
				<p class="text-white/50 text-sm">© 2026 TeaLinuxOs-Developed by DOSCOM</p>
			</div>
		</div>

		<!-- Right Section - Login Form -->
		<div class="w-full lg:w-1/2 flex items-center justify-center bg-black p-6 lg:p-12">
			<div class="w-full max-w-[400px]">
				<!-- Mobile Logo -->
				<div class="lg:hidden mb-8 flex justify-center">
					<img src="/src/assets/tealinus_ijo.svg" alt="TeaLinuxOS" class="h-8" />
				</div>

				<div class="text-center mb-8">
					<h2 class="text-white text-3xl font-bold mb-2">Welcome back</h2>
					<p class="text-white/60 text-sm">Enter your credentials to access your account</p>
				</div>
				
				<form id="loginForm" class="space-y-5">
					<div class="space-y-2">
						<label for="email" class="block text-white/70 text-sm font-medium">Email</label>
						<input 
							type="email" 
							id="email" 
							name="email" 
							placeholder="name@example.com" 
							required 
							class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 text-sm focus:outline-none focus:border-[#26A768]/50 focus:ring-1 focus:ring-[#26A768]/50 transition-all"
						/>
					</div>
					
					<div class="space-y-2">
						<div class="flex justify-between items-center">
							<label for="password" class="block text-white/70 text-sm font-medium">Password</label>
							<a href="/forgot-password" class="text-[#26A768] text-sm hover:underline">Forgot Password?</a>
						</div>
						<div class="relative">
							<input 
								type="password" 
								id="password" 
								name="password" 
								placeholder="••••••••" 
								required 
								class="w-full px-4 py-3 bg-white/5 border border-white/10 rounded-xl text-white placeholder-white/30 text-sm focus:outline-none focus:border-[#26A768]/50 focus:ring-1 focus:ring-[#26A768]/50 transition-all pr-12"
							/>
							<button type="button" id="togglePassword" class="absolute right-4 top-1/2 -translate-y-1/2 text-white/40 hover:text-white/70 transition-colors">
								<svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
									<path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
									<circle cx="12" cy="12" r="3"></circle>
								</svg>
							</button>
						</div>
					</div>
					
					<button 
						type="submit" 
						id="submitBtn"
						class="w-full py-3.5 bg-gradient-to-r from-[#26A768] to-[#2ecc71] text-white font-semibold rounded-xl hover:opacity-90 transition-all flex items-center justify-center gap-2 mt-6"
					>
						<span class="btn-text">Sign in</span>
						<div class="loader hidden" id="loader"></div>
					</button>
				</form>

				<div class="flex items-center my-6">
					<div class="flex-1 h-px bg-white/10"></div>
					<span class="px-4 text-white/40 text-sm">Or continue with</span>
					<div class="flex-1 h-px bg-white/10"></div>
				</div>

				<div class="grid grid-cols-2 gap-3">
					<a href="http://localhost:3000/auth/google" class="flex items-center justify-center gap-2 py-3 px-4 bg-white/5 border border-white/10 rounded-xl text-white text-sm font-medium hover:bg-white/10 transition-all">
						<svg width="18" height="18" viewBox="0 0 24 24" fill="none">
							<path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
							<path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
							<path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
							<path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
						</svg>
						Google
					</a>
					<a href="http://localhost:3000/auth/github" class="flex items-center justify-center gap-2 py-3 px-4 bg-white/5 border border-white/10 rounded-xl text-white text-sm font-medium hover:bg-white/10 transition-all">
						<svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						Github
					</a>
				</div>
				
				<div class="mt-8 text-center">
					<p class="text-white/50 text-sm">Don't have an account? <a href="/register" class="text-[#26A768] font-medium hover:underline">Sign up</a></p>
				</div>
				
				<div id="message" class="message mt-4"></div>
			</div>
		</div>
	</main>
</Layout>

<script>
	import { login } from '../lib/api';
	import { saveAuthData } from '../lib/auth';

	const loginForm = document.getElementById('loginForm') as HTMLFormElement;
	const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
	const loader = document.getElementById('loader');
	const message = document.getElementById('message');
	const togglePassword = document.getElementById('togglePassword');
	const passwordInput = document.getElementById('password') as HTMLInputElement;

	// Toggle password visibility
	togglePassword?.addEventListener('click', () => {
		const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
		passwordInput.setAttribute('type', type);
	});

	loginForm.addEventListener('submit', async (e) => {
		e.preventDefault();
		
		const formData = new FormData(loginForm);
		const email = formData.get('email') as string;
		const password = formData.get('password') as string;
		
		// Reset state
		submitBtn.disabled = true;
		loader?.classList.remove('hidden');
		loader?.classList.add('block');
		if (message) {
			message.textContent = '';
			message.className = 'message mt-4';
		}

		try {
			const result = await login(email, password);
			
			// Save auth data (tokens + user)
			saveAuthData(
				{ access_token: result.access_token, refresh_token: result.refresh_token },
				result.user
			);
			
			if (message) {
				message.textContent = 'Login successful! Redirecting...';
				message.classList.add('success');
			}

			setTimeout(() => {
				if (result.user.role === 'admin') {
					window.location.href = '/admin';
				} else {
					window.location.href = '/';
				}
			}, 1500);
		} catch (error) {
			if (message) {
				message.textContent = error instanceof Error ? error.message : 'Login failed';
				message.classList.add('error');
			}
		} finally {
			submitBtn.disabled = false;
			loader?.classList.add('hidden');
			loader?.classList.remove('block');
		}
	});
</script>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap');

	.message {
		padding: 12px;
		border-radius: 8px;
		font-size: 0.875rem;
		text-align: center;
		display: none;
	}

	.message.success {
		display: block;
		background: rgba(34, 197, 94, 0.1);
		color: #22c55e;
		border: 1px solid rgba(34, 197, 94, 0.2);
	}

	.message.error {
		display: block;
		background: rgba(239, 68, 68, 0.1);
		color: #ef4444;
		border: 1px solid rgba(239, 68, 68, 0.2);
	}

	.loader {
		width: 18px;
		height: 18px;
		border: 2px solid rgba(255, 255, 255, 0.3);
		border-radius: 50%;
		border-top-color: white;
		animation: spin 0.8s linear infinite;
	}

	@keyframes spin {
		to { transform: rotate(360deg); }
	}
</style>
