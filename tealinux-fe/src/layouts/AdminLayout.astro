---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Admin Dashboard - TeaLinuxOS" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-slate-950 text-white">
    <div class="flex min-h-screen">
      <!-- Sidebar -->
      <aside class="w-64 bg-slate-900 border-r border-slate-800 flex flex-col">
        <!-- Logo -->
        <div class="p-6 border-b border-slate-800">
          <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-[#54CD4C] flex items-center justify-center">
              <svg viewBox="0 0 24 24" class="w-6 h-6 text-black" fill="currentColor">
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"/>
              </svg>
            </div>
            <div>
              <span class="font-bold text-lg">TeaLinuxOS</span>
              <span class="text-xs text-slate-400 block">Admin Panel</span>
            </div>
          </a>
        </div>

        <!-- Navigation -->
        <nav class="flex-1 p-4">
          <p class="text-xs font-semibold text-slate-500 uppercase tracking-wider mb-3 px-3">Menu</p>
          <ul class="space-y-1">
            <li>
              <a href="/admin" class="flex items-center gap-3 px-4 py-2.5 rounded-lg bg-[#54CD4C]/10 text-[#54CD4C] font-medium">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
                </svg>
                Downloads
              </a>
            </li>
          </ul>
        </nav>

        <!-- User Info -->
        <div class="p-4 border-t border-slate-800">
          <div class="flex items-center gap-3 px-3 py-2 rounded-lg bg-slate-800/50">
            <div id="adminAvatar" class="w-10 h-10 rounded-full bg-[#54CD4C]/20 flex items-center justify-center text-[#54CD4C] font-bold">
              A
            </div>
            <div class="flex-1 min-w-0">
              <p id="adminName" class="font-semibold text-sm truncate">Admin</p>
              <p class="text-xs text-slate-400">Administrator</p>
            </div>
            <button id="logoutBtn" class="text-slate-400 hover:text-white transition-colors" title="Logout">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            </button>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 overflow-auto bg-slate-950">
        <!-- Header -->
        <header class="sticky top-0 z-10 bg-slate-900/95 backdrop-blur border-b border-slate-800 px-8 py-4">
          <div class="flex items-center justify-between">
            <div>
              <h1 class="text-2xl font-bold">Download Analytics</h1>
              <p class="text-sm text-slate-400 mt-1">Monitor ISO downloads</p>
            </div>
            <a href="/" class="text-sm text-slate-400 hover:text-white transition-colors flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Back to Site
            </a>
          </div>
        </header>

        <!-- Page Content -->
        <div class="p-8">
          <slot />
        </div>
      </main>
    </div>

    <script>
      import { isAuthenticated, getCurrentUser, clearAuthData } from '../lib/auth';

      function checkAdminAccess() {
        if (!isAuthenticated()) {
          window.location.href = '/login';
          return;
        }

        const user = getCurrentUser();
        if (!user || user.role !== 'admin') {
          window.location.href = '/';
          return;
        }

        const adminAvatar = document.getElementById('adminAvatar');
        const adminName = document.getElementById('adminName');
        if (adminAvatar) adminAvatar.textContent = user.name.charAt(0).toUpperCase();
        if (adminName) adminName.textContent = user.name;
      }

      document.getElementById('logoutBtn')?.addEventListener('click', () => {
        clearAuthData();
        window.location.href = '/login';
      });

      checkAdminAccess();
    </script>

    <style is:global>
      * {
        font-family: 'Inter', system-ui, sans-serif;
      }
    </style>
  </body>
</html>
